<%-include('foxy/header.ejs')%>

<%-include('foxy/nav.ejs')%>
<link rel="stylesheet" href="/stylesheets/sign.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<div class="cont1">
<h2>SignUp</h2>

<form action="/signup" class="form-group" enctype="multipart/form-data" method="post">
    <div class="cont2">
    <h1>Username</h1>
    <input type="text" class="form-control" name="username" placeholder="enter your name">
    <h1>Full Name</h1>
    <input type="text" class="form-control" name="name" placeholder="What do you do for living">

     <h1>Email</h1>
     <input type="email" class="form-control" name="email" placeholder="enter email address">
   
     <h1>Password</h1>
     <input type="password" class="form-control" name="password" placeholder="*******">
     <h1>Age</h1>
     <input type="text" class="form-control" name="age" placeholder="enter your age">

     <h1>Profession</h1>
     <input type="text" class="form-control" name="profession" placeholder="What do you do for living">
      

     <h1>Profile Pic</h1>
     <input type="file" name="avatar">
     <h1>Phone no</h1>
     <input type="text" class="form-control" name="no" placeholder="+91">
     <br><br>
     <button>SignUp</button>
    </div>
</form>
</div>
<%-include('foxy/footer.ejs')%>