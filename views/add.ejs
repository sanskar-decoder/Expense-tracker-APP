<div class="con1">
    
    <h1>ADD YOUR Expenses HERE </h1>

    <form action="/add" class="form-group" method="post">
       <h2>Amount spended</h2>
       <input type="number"  class="form-control" name="spend" placeholder="spent amount">
       <br>
       <h2>Categories </h2>
       <input type="text" class="form-control" name="categories" placeholder="reason">
       <br>
       <h2>Payment Mode</h2>
       <select  class="form-control" name="paymentmode">
        <option value="cash">Cash</option>
        <option value="online">Online</option>
        <option value="cheque">Cheque</option>
    </select>
       <br><br>
       <button>Submit</button>
    </form>
</div>

